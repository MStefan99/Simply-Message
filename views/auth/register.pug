extends ../layout

block content
	div.container-lg.mt-3
		div.jumbotron
			h1.light Sign up for Simply Message today
			h2.light It's free and fast!

		h1.light Sign up
		form(action='/register/' method='post')
			label Username
			input(name='username' placeholder='Username')
			label Email
			input(name='email' type='email' placeholder='Email')
			label Password
			input(name='password' type='password' placeholder='Password')
			label Repeat password
			input(name='passwordRepeat' type='password' placeholder='Repeat password')
			input.btn.btn-success(type='submit' value='Sign up')
