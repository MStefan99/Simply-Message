extends ../layout

block content
	div.container-lg.m-3
		div.jumbotron
			h1.light Welcome to Simply Message
			h3.light Simply Message is a secure open-source messenger. Try it now!
			if (!session)
				a.btn.btn-primary(href='/register/') Sign up
				a.btn.btn-success(href='/login/') Sign in
			else
				a.btn.btn-success(href='/messenger/') Open messages
			a.btn.btn-outline-secondary(href='/about/') Read more
