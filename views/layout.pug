doctype html

html(lang='en')
	head
		title Simply Message
		link(rel='stylesheet', type='text/css', href='/style/stylify.css')
		link(rel='stylesheet', type='text/css', href='/style/style.css')
		meta(charset='UTF-8')
		meta(name='description' content='Simply Message is a secure open-source messenger')
		meta(name='viewport' content='width=device-width, initial-scale=1')
		block head

	body
		header.border-bottom
			a(href='/') Home
			if (!session)
				a.right(href='/login/') Sign in
			else
				a.right(href='/logout/') Sign out
			block header

		main
			block content

		footer
			block footer
