ease-in = cubic-bezier(0, .6, .4, 1)
color-white = #fff
color-black = #000
color-light = #f8f9fa
color-dark = #343a40
color-primary = #007bff
color-secondary = #6c757d
color-success = #28a745
color-danger = #dc3545
color-warning = #ffc107
color-info = #17a2b8
spacer = 1rem
sizes = 'sm' 'md' 'lg' 'xl'
displays = inline inline-block block flex inline-flex \
table table-row table-cell none
size-sm = 425px
size-md = 768px
size-lg = 1024px
size-xl = 1440px
colors = 'primary' 'secondary' 'success' 'danger' 'warning' 'info'\
'light' 'dark'
all-colors = 'primary' 'secondary' 'success' 'danger' 'warning' 'info'\
'light' 'dark' 'white' 'black'


negate(unit)
	if unit != auto and unit != 0
		- unit
	else
		unit

flex-prefix(type)
	if type == between or type == around
		space- + type
	else if type == start or type == end
		flex- + type
	else
		type


html
	font-family sans-serif
	scroll-behavior smooth

	*, ::after, ::before
		box-sizing border-box

	a
		text-decoration none

	body
		// Utility styles

		// Backgrounds

		for clr in all-colors
			.bg-{clr}
				background color- + clr
				if clr == 'warning' or clr == 'light'
					color color-dark
				else
					color color-light

		// Foregrounds

		for clr in all-colors
			.text-{clr}
				color color- + clr

		// Alerts

		.alert
			margin 1em 0
			padding 1em 1.5em
			border-radius 5px
			font-size 1em
			font-weight normal

			for clr in colors
				&.alert-{clr}
					background lighten(color- + clr, 80%)
					color darken(color- + clr, 30%)
					border 1.2px solid lighten(color- + clr, 70%)

		.hidden
			display none !important

		.jumbotron
			padding 2em
			background-color darken(color-light, 10%)
			border-radius 20px
			margin-bottom 2em

		// Text

		.bold
			font-weight bold

		.light
			font-weight normal

		// Containers

		.container
			width 100%

			for size in sizes
				@media screen and (min-width size- + size)
					width size- + size

		.container-fluid
			width 100%

		for size in sizes
			.container-{size}
				width 100%

				for querySize in sizes
					if size- + querySize <= size- + size
						@media screen and (min-width size- + querySize)
							width size- + querySize

		// Spacing

		for side in 't' 'b' 'l' 'r' 'x' 'y' ''
			for spacing in '0' '1' '2' '3' '4' '5' 'auto'
				for type in 'm' 'p'
					if type == 'm'
						spacingType = margin
					else if type == 'p'
						spacingType = padding

					if side == 't'
						spacingSide = top
					else if side == 'b'
						spacingSide = bottom
					else if side == 'l'
						spacingSide = left
					else if side == 'r'
						spacingSide = right
					else if side == 'x'
						spacingSide = left right
					else if side == 'y'
						spacingSide = top bottom
					else if !side
						spacingSide = ''

					if spacing == '0'
						spacingSpace = 0
					else if spacing == '1'
						spacingSpace = spacer * .25
					else if spacing == '2'
						spacingSpace = spacer * .5
					else if spacing == '3'
						spacingSpace = spacer
					else if spacing == '4'
						spacingSpace = spacer * 1.5
					else if spacing == '5'
						spacingSpace = spacer * 3
					else if spacing == 'auto'
						spacingSpace = auto

					.{type}{side}-{spacing}
						for s in spacingSide
							if spacingSide
								{spacingType}-{s} spacingSpace
							else
								{spacingType} spacingSpace

				.m{side}-n{spacing}
					for s in spacingSide
						if spacingSide
							margin-{s} negate(spacingSpace)
						else
							margin negate(spacingSpace)

		// Borders

		.border
			border 1px solid darken(color-light, 10%)

		for side in top bottom left right
			.border-{side}
				border-{side} 1px solid darken(color-light, 10%)

			.border-{side}-{0}
				border-{side} none

		for clr in all-colors
			.border-{clr}
				border-color color- + clr

		// Display

		for display in displays
			.d-{display}
				display display !important

		for size in sizes
			for display in displays
				@media screen and (min-width size- + size)
					.d-{size}-{display}
						display display !important

		// Flex

		.flex-wrap
			flex-wrap wrap

		.flex-nowrap
			flex-wrap nowrap

		for direction in row column
			.flex-{direction}
				flex-direction direction
			.flex-{direction}-reverse
				flex-direction direction + -reverse

		for size in sizes
			for direction in row column
				@media screen and (min-width size- + size)
					.flex-{size}-{direction}
						flex-direction direction

					.flex-{size}-{direction}-reverse
						flex-direction direction + -reverse

		for type in start end center between around
			.justify-content-{type}
				justify-content flex-prefix(type)

		for size in sizes
			for type in start end center between around
				@media screen and (min-width size- + size)
					.justify-content-{size}-{type}
						justify-content flex-prefix(type)

		for type in start end center baseline stretch
			.align-items-{type}
				align-items flex-prefix(type)

			.align-self-{type}
				align-self flex-prefix(type)

		for size in sizes
			for type in start end center baseline stretch
				@media screen and (min-width size- + size)
					.align-items-{size}-{type}
						align-items flex-prefix(type)

					.align-self-{size}-{type}
						align-self flex-prefix(type)

		.flex-fill
			flex 1 1 auto

		for enabled in 0 1
			.flex-grow-{enabled}
				flex-grow enabled

			.flex-shrink-{enabled}
				flex-shrink enabled

		for size in sizes
			for enabled in 0 1
				@media screen and (min-width size- + size)
					.flex-{size}-grow-{enabled}
						flex-grow enabled

					.flex-{size}-shrink-{enabled}
						flex-shrink enabled


		// Floats

		.float-left
			float left

		.float-right
			float right

		.float-none
			float none

		for size in sizes
			for side in left right none
				@media screen and (min-width size- + size)
					.float-{size}-{side}
						float side

		// Shadows

		.shadow-none
			box-shadow none

		.shadow-sm
			box-shadow 0 .125rem .25rem #00000014

		.shadow
			box-shadow 0 .5rem 1rem #00000028

		.shadow-lg
			box-shadow 0 1rem 3rem #0000003c

		// Controls

		button, .btn
			display inline-block
			color color-dark
			background-color transparent
			margin .6em
			margin-left 0
			padding .7em
			font-weight bold
			font-size inherit
			border-radius 5px
			border-width 1px
			border-style solid
			cursor pointer
			transition color .2s ease-in,
			border-color .2s ease-in,
			background-color .2s ease-in,
			box-shadow .2s ease-in

			&:focus
				outline 1px

			for clr in colors
				&.btn-{clr}
					background color- + clr
					border-color color- + clr
					if clr == 'warning' or clr == 'light'
						color color-dark
					else
						color color-light

					&:hover
						background darken(color- + clr, 10%)

					&:active
						background darken(color- + clr, 15%)

					&:focus
						box-shadow 0 0 0 3px transparentify(color- + clr, color- + clr, 40%)

					&[disabled]
						pointer-events none
						background lighten(color- + clr, 40%)
						border-color lighten(color- + clr, 40%)

			for clr in colors
				&.btn-outline-{clr}
					font-weight normal
					color color- + clr
					border-color color- + clr

					&:hover
						color color-light
						background color- + clr

					&:active
						background darken(color- + clr, 15%)

					&:focus
						box-shadow 0 0 0 3px transparentify(color- + clr, color- + clr, 40%)

					&[disabled]
						pointer-events none
						color lighten(color- + clr, 40%)
						border-color lighten(color- + clr, 40%)

			&:focus
				box-shadow 0 0

		// Forms

		form
			display block

		.form-row
			display flex
			flex-flow row nowrap
			justify-content space-between
			align-items center

		label
			display inline-block
			margin 1em 1em .4em 0

		input, input[type=email], input[type=password],
		input[type=search], input[type=text], input[type=email], textarea
			display block
			width 100%
			margin .6em
			margin-left 0
			padding .7em
			font-size 1em
			border-radius 5px
			border 1px solid darken(color-light, 10%)
			transition box-shadow .2s ease-in

			&:focus
				outline none
				border 1px solid lighten(color-primary, 40%)
				box-shadow 0 0 0 3px transparentify(color-primary, color-primary, 40%)

		input[type=button], input[type=reset], input[type=submit]
			width max-content
			font-weight normal
			margin-left 0

		// End of utility styles

		margin 0
		display flex
		flex-flow column nowrap
		justify-content space-between
		min-height 100vh

		.clickable
			cursor pointer

			&:hover
				filter brightness(.9)

		header
			font-size 1.4em
			padding .8em
			background #f5f5f5

			.right
				float right

			a
				color #707070
				padding 0 1em
				display inline

		main
			display flex
			margin 0 auto
			flex-grow 1
			min-height 100%

			div#messenger-container
				display flex
				flex-flow row nowrap
				align-content stretch
				min-height 100%

				div#chat-container
					display flex
					flex-flow column nowrap
					justify-content space-between
					flex 1 0 40%

					div#chats
						flex 1

						div.chat
							.chat-message
								white-space nowrap
								overflow-x hidden

				div#message-container
					display flex
					flex-flow column nowrap
					justify-content space-between
					flex 1 0 60%

					div#messages
						display flex
						flex-flow column nowrap
						align-items flex-start
						flex 1

				div#chat-container .header, div#message-container .header
					display flex
					flex-flow row nowrap
					justify-content space-between
					align-content center
					padding .4em
